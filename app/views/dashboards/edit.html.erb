  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, autofocus: true %>
  </div>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
    <div class="field">
    <%= form.label :price %>
    <%= form.text_area :price %>
  </div>
  <div class="actions">
    <%= form.submit "Edite" %>
  </div>
<% end %>
