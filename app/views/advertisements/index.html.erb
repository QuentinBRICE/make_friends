
<div class="card-container">
  <% @advertisements.each do |advertisement| %>
    <div class="card">
    <% if advertisement.photo.attached? %>
    <div class="card-image">
      <%= cl_image_tag advertisement.photo.key, width: 280, height: 100, crop: :fill,class: "image-style" %>
    </div>
      <% end %>
      <p> <%= advertisement.title %></p>
      <p> <%= advertisement.description %></p>
      <p> <%= advertisement.price %></p>
    </div>
  <% end %>
</div>
<%= link_to "Create an advertisement", new_advertisement_path(@advertisement), class: "btn btn-outline-dark m-3" %>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

