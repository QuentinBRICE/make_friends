
<h1><%= @advertisement.title %></h1>
<p><strong>Description:</strong> <%= @advertisement.description %></p>
<p><strong>Prix:</strong> <%= @advertisement.price %><strong>€</strong> </p>


<!-- app/views/advertisements/show.html.erb -->
<div class="advertisement-details">

<% if @advertisement.photo.attached? %>
    <%= link_to advertisement_path(@advertisement) do %>
      <div class="image-container">
        <%= cl_image_tag @advertisement.photo.key, width: 400, height: 300, crop: :fill, class: "advertisement-image" %>
      </div>
    <% end %>
  <% end %>
  <h1><%= @advertisement.title %></h1>
  <p class="description"> <%= @advertisement.description %></p>
  <p class="price"><%= @advertisement.price %></p>
</div>

<%= link_to "Réserver", new_advertisement_booking_path(@advertisement)%>
<%= link_to "Return to advertisements", advertisements_path(@advertisement), class: "btn btn-outline-dark m-3" %>
